  },
  "homepage": "https://github.com/A64Danil/easytpl#readme",
  "dependencies": {
    "bootstrap": "^4.3.1",
    "handlebars": "^4.5.3",
    "jquery": "^3.4.1",
    "popper.js": "^1.15.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.2",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.0.0",
    "babel-loader": "^8.0.6",
    "copy-webpack-plugin": "^5.0.4",
